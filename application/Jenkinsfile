pipeline {
    agent any

    environment {
        IMAGE_NAME = "b4w4rzr1ng/jenkins"
    }

    stages {
        stage('Build-Docker-Image') {
      steps {
        container('docker') {
          sh 'docker build -t b4w4rzr1ng/jenkins .'
        }
      }
    }

        stage('Test image') {
            steps {
                script {
                    app.inside {
                        sh 'echo "Tests passed"'
                    }
                }
            }
        }

        stage('Push image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'jenkins') {
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                    }
                }
            }
        }
    }
}
