pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: kaniko-job
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    command:
      - /kaniko/executor
    args:
      - "--dockerfile=/workspace/application/Dockerfile"
      - "--context=/workspace/application"
      - "--destination=b4w4rzr1ng/jenkins:\${BUILD_NUMBER}"
      - "--destination=b4w4rzr1ng/jenkins:latest"
      - "--skip-tls-verify"
    volumeMounts:
      - name: kaniko-secret
        mountPath: /kaniko/.docker
      - name: workspace-volume
        mountPath: /workspace/application
  volumes:
    - name: kaniko-secret
      secret:
        secretName: dockerhub-secret
    - name: workspace-volume
      emptyDir: {}
"""
        }
    }

    stages {
        stage('Checkout Code') {
            steps {
                container('kaniko') {
                    // Clone your repo into the shared volume
                    dir('/workspace/application') {
                        git 'https://github.com/Bawar-Zring/Jenkins-CI-CD.git'
                        sh 'ls -la'
                    }
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
              echo 'Deploying to EKS...'
                // container('kaniko') {
                //     sh '''
                //     kubectl set image deployment/your-deployment your-container=b4w4rzr1ng/jenkins:${BUILD_NUMBER} -n your-namespace
                //     '''
                // }
            }
        }
    }
}
